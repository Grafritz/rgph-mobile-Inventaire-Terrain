<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Views.Activity.FormulaireActivity"
    android:background="@color/bootstrap_gray_lighter"
    android:orientation="vertical"
    android:weightSum="1"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="1dp"
        android:background="@color/colorPrimary"
        app:titleTextColor="@color/colorWhite"
        app:subtitleTextColor="@color/colorWhite"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            >
            <LinearLayout
                android:id="@+id/LLGrandTitre"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/LLStyle"
                android:paddingBottom="@dimen/activity_vertical_margin"
                >
                <TextView
                    android:id="@+id/tv_GrandTitre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_ListeLogement"
                    android:textAlignment="center"
                    android:textColor="@color/bootstrap_brand_primary"
                    android:textSize="17dp"
                    android:layout_margin="0dp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/LLStyle"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_NumeroBatCourt"
                        style="@style/tvTitre2"
                        />
                    <EditText
                        android:background="@drawable/my_shape"
                        android:padding="10dp"
                        android:id="@+id/et_NoBatiment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/label_NumeroBatCourt"
                        android:inputType="number"
                        android:maxLines="1"
                        android:singleLine="true"
                        />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="6"
                        android:layout_marginLeft="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_Type_Batiment"
                            style="@style/tvTitre2"
                            />
                        <Spinner
                            android:id="@+id/sp_TypeBatiment"
                            android:layout_marginTop="1dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:prompt="@string/label_Type_Batiment"
                            android:spinnerMode="dialog"
                            android:background="@drawable/my_shape"
                            />
                    </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:id="@+id/LL_AdrBat_LocaliteNouveauNom_Urbain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/LLStyle"
            android:layout_marginBottom="0dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_adresse_du_batiment"
                style="@style/tvTitre2"
                />
                <EditText
                    android:background="@drawable/my_shape"
                    android:padding="10dp"
                    android:id="@+id/et_AdrBat_LocaliteNouveauNom_Urbain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/label_adresse_du_batiment"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:singleLine="true"

                    />
        </LinearLayout>

            <LinearLayout
                android:id="@+id/LL_AdrBat_LocaliteNouveauNom_Rural"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/LLStyle"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:background="@color/bootstrap_gray_lighter"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_adresse_du_batiment_habitation"
                        style="@style/tvTitre2"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_adresse_du_batiment_Anc_Nom"
                            style="@style/tvTitre2"
                            />
                        <EditText
                            android:background="@drawable/my_shape"
                            android:padding="10dp"
                            android:id="@+id/et_AdrBat_HabitationAncienNom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/label_adresse_du_batiment_Anc_Nom"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:singleLine="true"
                            />
                        </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_adresse_du_batiment_Nouv_Nom"
                            style="@style/tvTitre2"
                            />
                        <EditText
                            android:background="@drawable/my_shape"
                            android:padding="10dp"
                            android:id="@+id/et_AdrBat_HabitationNouveauNom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/label_adresse_du_batiment_Nouv_Nom"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:singleLine="true"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:background="@color/bootstrap_gray_lighter"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_adresse_du_batiment_Localite"
                        style="@style/tvTitre2"
                        />

                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_adresse_du_batiment_Anc_Nom"
                        style="@style/tvTitre2"
                        />
                    <EditText
                        android:background="@drawable/my_shape"
                        android:padding="10dp"
                        android:id="@+id/et_AdrBat_LocaliteAncienNom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/label_adresse_du_batiment_Anc_Nom"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:singleLine="true"
                        />
                </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_adresse_du_batiment_Anc_Nom"
                            style="@style/tvTitre2"
                            />
                        <EditText
                            android:background="@drawable/my_shape"
                            android:padding="10dp"
                            android:id="@+id/et_AdrBat_LocaliteNouveauNom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/label_adresse_du_batiment_Nouv_Nom"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:singleLine="true"
                            />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                style="@style/LLStyle"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_Coordonnees_du_batiment"
                    style="@style/tvTitre2"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_Latitude"
                            style="@style/tvTitre2"
                            />
                        <EditText
                            android:background="@drawable/my_shape"
                            android:padding="10dp"
                            android:id="@+id/et_Latitude"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/label_Latitude"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:singleLine="true"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_Longitude"
                            style="@style/tvTitre2"
                            />
                        <EditText
                            android:background="@drawable/my_shape"
                            android:padding="10dp"
                            android:id="@+id/et_Longitude"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/label_Longitude"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:singleLine="true"
                            />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/Btn_GetGPS"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="@string/label_ResumeGPS"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/bootstrap_brand_warning"
                    />

            </LinearLayout>

            <!--  Etat Actuel -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/LLStyle"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_EtatActuel"
                        style="@style/tvTitre2"
                        />
                    <Spinner
                        android:id="@+id/sp_EtatActuel"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:prompt="@string/label_EtatActuel"
                        android:spinnerMode="dialog"
                        android:background="@drawable/my_shape"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:layout_marginLeft="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_NbrEtage"
                        style="@style/tvTitre2"
                        />
                    <EditText
                        android:background="@drawable/my_shape"
                        android:padding="10dp"
                        android:id="@+id/et_NbrEtage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/label_NbrEtage"
                        android:inputType="number"
                        android:maxLines="1"
                        android:singleLine="true"
                        />
                </LinearLayout>

            </LinearLayout>
            <!--  -->

            <!--  Usage Batiment -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/LLStyle"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_UsageBatiment"
                        style="@style/tvTitre2"
                        />
                    <Spinner
                        android:id="@+id/sp_UsageBatiment"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:prompt="@string/label_UsageBatiment"
                        android:spinnerMode="dialog"
                        android:background="@drawable/my_shape"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:layout_marginLeft="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_NbrLogement"
                        style="@style/tvTitre2"
                        />
                    <EditText
                        android:background="@drawable/my_shape"
                        android:padding="10dp"
                        android:id="@+id/et_NbrLogement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/label_NbrLogement"
                        android:inputType="number"
                        android:maxLines="1"
                        android:singleLine="true"
                        />
                </LinearLayout>

            </LinearLayout>
            <!--  -->
            <LinearLayout
                android:id="@+id/LL_Institution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                style="@style/LLStyle"
                >
                <TextView
                    android:id="@+id/tv_NomInstitution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_NomInstitution"
                    style="@style/tvTitre2"
                    />
                <EditText
                    android:background="@drawable/my_shape"
                    android:padding="10dp"
                    android:id="@+id/et_NomInstitution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/label_NomInstitution"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                    />
                <TextView
                    android:id="@+id/tv_PhoneInstitution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_PhoneInstitution"
                    style="@style/tvTitre2"
                    />
                <EditText
                    android:id="@+id/et_PhoneInstitution"
                    android:background="@drawable/my_shape"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/label_PhoneInstitution"
                    android:inputType="number|numberSigned|numberDecimal"
                    android:maxLength="13"
                    android:ems="8"
                    android:maxLines="1"
                    android:singleLine="true"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_Remarques"
                style="@style/tvTitre2"
                />
            <EditText
                android:background="@drawable/my_shape"
                android:padding="10dp"
                android:id="@+id/et_Remarques"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_Remarques"
                android:inputType="textMultiLine"
                android:ems="10"
                android:maxLines="4"
                android:singleLine="false"
                style="@style/LLStyle"
                />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/Btn_SaveData"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/Label_Sauvegarder"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:padding="20dp"
                app:bootstrapBrand="primary"
                app:roundedCorners="true"
                app:bootstrapSize="xl"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_horizontal"
                />
            <LinearLayout
                android:id="@+id/LL_ListeLogement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                style="@style/LLStyle"
                >
                <TextView
                    android:id="@+id/tv_TitreListeLogement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_ListeLogement"
                    style="@style/tvTitre2"
                    android:textAlignment="center"
                    android:textColor="@color/bootstrap_brand_primary"
                    android:textSize="15dp"
                    />
                <view
                    android:id="@+id/recycler_view"
                    class="android.support.v7.widget.RecyclerView"
                    android:background="@drawable/border_shadow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    app:itemHeight="@dimen/activity_horizontal_margin"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/toolbar"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:verticalSpacing="5dp"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    />
                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
